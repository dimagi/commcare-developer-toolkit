<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dalvik.commcare.org.commcaredevelopertoolkit" >

    <uses-permission android:name="commcare.TEST"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/display_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        

        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/display_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ImageSizingActivity"></activity>
        <activity android:name=".activities.DeviceInfoActivity"></activity>
        <activity android:name=".activities.RefreshToLatestBuildActivity"></activity>
        <activity android:name=".activities.SupportingAppsActivity"></activity>
        <activity android:name=".activities.RegistrationActivity"></activity>

        <service android:name="dalvik.commcare.org.commcaredevelopertoolkit.activities.InstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>
