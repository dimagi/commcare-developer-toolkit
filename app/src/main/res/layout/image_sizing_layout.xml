<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp" >

    <TextView
        android:id="@+id/image_sizing_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/image_sizing_explanation"
        android:paddingBottom="32dp" />

    <RelativeLayout
        android:id="@+id/resizable_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/image_sizing_explanation" >

        <dalvik.commcare.org.commcaredevelopertoolkit.utilities.UserResizableView
            android:layout_height="match_parent"
            android:layout_width="match_parent" >

        </dalvik.commcare.org.commcaredevelopertoolkit.utilities.UserResizableView>

    </RelativeLayout>



</RelativeLayout>