<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GridView">
        <item name="android:padding">@dimen/standard_spacer</item>
        <item name="android:divider">@null</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="DeviceInfoRow">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingBottom">@dimen/spacer_double</item>
    </style>
    <style name="DeviceInfoTitle">
        <item name="android:textSize">@dimen/text_size_medium_plus</item>
        <item name="android:textColor">@color/cc_brand_text</item>
        <item name="android:padding">@dimen/table_row_padding</item>
    </style>
    <style name="DeviceInfoValue">
        <item name="android:gravity">right</item>
        <item name="android:padding">@dimen/table_row_padding</item>
    </style>


</resources>
